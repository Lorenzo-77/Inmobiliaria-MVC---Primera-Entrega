@model inmobiliaria_Lorenzo.Models.Pago

@{
    ViewData["Title"] = "Edit";
    var Contratos = (IList<Contrato>)ViewBag.Contratos;
}

<h1>Editar pago</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroPago" class="control-label"></label>
                <input asp-for="NumeroPago" class="form-control" readonly />
                <span asp-validation-for="NumeroPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input type="date" asp-for="FechaPago" class="form-control" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label class="control-label">Contrato</label>
                <select class="form-control" name="IdContrato">
                    @foreach (var item in Contratos)
                    {
                        @:<option @(item.Id==Model.IdContrato ? "selected" : "") value="@item.Id"> @(item.Id+"---"+item.Inmueble.Direccion+"---"+item.Inquilino.Apellido)</option>
                    }
                </select>
                <span asp-validation-for="IdContrato" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver atr√°s</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}